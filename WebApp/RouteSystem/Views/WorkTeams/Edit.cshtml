@using Route.Domain.Model
@using Serviceapplication.ServiceCity
@using Serviceapplication.ServicePerson
@model Route.Domain.Model.WorkTeam

@{
    ViewData["Title"] = "Editar equipe";
}

<br /><br />
<div class="row d-flex justify-content-center text-center">
<h1>Editar equipe</h1>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        
            <br />
            	<div class="form-group">
				</> <label asp-for="City" class="control-label"></label><br /><br />
				<select  class="form-select"  asp-for="City" id="City">
                    	
                   
					@foreach (City city in await ServiceCityApp.GetCity())
					{
						<option value="@city.Name"> @city.Name </option>
					}
				</select>
			
			</div>
               	<div class="form-group form-switch">
       <br /> 	<label  class="control-label">Desmarque para excluir Pessoas da Equipe: </label><br />
				@foreach (var person in ViewBag.PersonTeam)
				{
					<input  class="form-check-input"  name="ExistTeam" type="checkbox"  value=@person checked="">

					<label for="@person"> @person</label>

					<br />
				}
			</div>  
       <br />
       	<div class="form-group form-switch">
				<label asp-for="Person" class="control-label"></label><br />
				@foreach (var person in await ServicePersonApp.GetPersonStatus())
				{
					<input class="form-check-input" name="Person" type="checkbox" value=@person.Name>
					<label for="@person.Name"> @person.Name</label>
					<br />
				}
			</div>    
          <br />
            <input type="hidden" asp-for="Id" />
            <div class="form-group d-grid gap-2">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <br />
    <a asp-action="Index">Visualizar Equipes cadastradas</a>
</div>

</div>


