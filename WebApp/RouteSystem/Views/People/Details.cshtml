@model Route.Domain.Model.Person

@{
    ViewData["Title"] = "Pessoa";
}
<br />
<h1>Visualizar</h1>
<br />
<div>
   
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
      
          
        <dd class = "col-sm-10">
            @if (@Model.Status == false)
			{
				<p>Disponível</p>

			}
			else
			{
				<p>Ocupado</p>
			}
           
        </dd>
      
    </dl>
</div>
<div>
       <a asp-action="Create">Cadastrar</a> | 
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Visualizar Pessoas Cadastras</a>
</div>
